---
<div
  id="project-modal"
  class="
    fixed inset-0 z-[9999] hidden
    flex items-center justify-center
    bg-black/80
  "
>
  <!-- Modal container -->
  <div
    class="
      relative w-full max-w-4xl max-h-[90vh]
      bg-white dark:bg-neutral-900
      rounded-xl shadow-2xl
      overflow-hidden
      flex flex-col
    "
  >
    <!-- Close button -->
    <button
      id="close-modal"
      class="
        absolute top-4 right-4 z-20
        bg-black/60 hover:bg-black/80
        text-white rounded-full
        w-10 h-10
        flex items-center justify-center
      "
      aria-label="Cerrar modal"
    >
      ✕
    </button>

    <!-- Scrollable content -->
    <div class="flex-1 overflow-y-auto">

      <!-- Title -->
      <div class="px-6 pt-6 pb-4">
        <h3
          id="modal-title"
          class="
            text-2xl md:text-3xl font-bold
            text-gray-900 dark:text-white
          "
        ></h3>
      </div>

      <!-- Image / Cinema area -->
      <div
        class="relative w-full bg-black
              h-[260px] md:h-[420px]
              flex items-center justify-center"
      >

        <img
          id="modal-image"
          class="
            max-h-[240px] md:max-h-[420px]
            w-auto object-contain
          "
          alt=""
        />

        <!-- Prev -->
        <button
          id="prev-image"
          class="
            absolute left-4 top-1/2 -translate-y-1/2
            bg-black/60 hover:bg-black/80
            text-white w-12 h-12
            rounded-full
            flex items-center justify-center
            text-2xl
          "
          aria-label="Imagen anterior"
        >
          ‹
        </button>

        <!-- Next -->
        <button
          id="next-image"
          class="
            absolute right-4 top-1/2 -translate-y-1/2
            bg-black/60 hover:bg-black/80
            text-white w-12 h-12
            rounded-full
            flex items-center justify-center
            text-2xl
          "
          aria-label="Imagen siguiente"
        >
          ›
        </button>

        <!-- Indicators -->
        <div
          id="image-indicators"
          class="
            absolute bottom-4 left-0 right-0
            flex justify-center gap-2
          "
        ></div>
      </div>

      <!-- Description -->
      <div class="px-6 py-6 space-y-6">

        <!-- General description -->
        <p
          id="modal-description"
          class="text-gray-700 dark:text-gray-300 leading-relaxed"
        ></p>

        <!-- Problem -->
        <div>
          <h4 class="font-semibold text-lg text-gray-900 dark:text-white mb-2">
            Problema resuelto
          </h4>
          <p
            id="modal-problem"
            class="text-gray-600 dark:text-gray-400"
          ></p>
        </div>

        <!-- Achievements -->
        <div>
          <h4 class="font-semibold text-lg text-gray-900 dark:text-white mb-2">
            Logros
          </h4>
          <ul
            id="modal-achievements"
            class="
              list-disc list-inside
              text-gray-600 dark:text-gray-400
              space-y-1
            "
          ></ul>
        </div>

        <!-- Technologies -->
        <div>
          <h4 class="font-semibold text-lg text-gray-900 dark:text-white mb-3">
            Tecnologías
          </h4>
          <div
            id="modal-technologies"
            class="flex flex-wrap gap-2"
          ></div>
        </div>

      </div>
    </div>
  </div>
</div>

