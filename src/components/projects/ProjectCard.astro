---
const { project } = Astro.props;
---

<div
  class="group p-6 bg-white-80 dark:bg-neutral-900-80 backdrop-blur-sm
         rounded-lg border border-gray-200 dark:border-neutral-700
         hover:shadow-xl transition-all cursor-pointer"
  data-project-id={project.id}
>
  <img
    src={project.images[0]}
    alt={project.title}
    class="h-40 w-full object-cover rounded-lg mb-4"
  />


  <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">
    {project.title}
  </h3>

  <p class="text-gray-600 dark:text-gray-400 mb-4">
    {project.description}
  </p>

  <button
    type="button"
    class="text-blue-600 dark:text-blue-400 font-semibold"
    data-open-modal
  >
    Ver más →
  </button>

</div>
