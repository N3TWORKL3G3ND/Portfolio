---

<section
  id="education"
  class="py-24 px-6 bg-white/90 dark:bg-neutral-900/80 backdrop-blur-md transition-colors"
>
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl font-bold mb-14 text-gray-900 dark:text-white text-center">
      Educación
    </h2>

    <div class="relative">
      <!-- Línea vertical -->
      <div
        class="absolute left-4 top-0 h-full w-px bg-gradient-to-b from-blue-500/40 via-purple-500/40 to-transparent"
      ></div>

      <div class="space-y-12">
        <!-- Item 1 -->
        <div class="relative pl-12">
          <!-- Punto -->
          <span
            class="absolute left-1.5 top-3 w-5 h-5 rounded-full bg-blue-500 ring-4 ring-blue-500/20"
          ></span>

          <div
            class="
              group
              p-6
              bg-white/80 dark:bg-neutral-800/80
              backdrop-blur-sm
              rounded-xl
              border border-gray-200 dark:border-neutral-700
              shadow-lg
              transition-all duration-300
              hover:shadow-2xl
              hover:border-blue-400/50 dark:hover:border-blue-500/40
              hover:bg-white/90 dark:hover:bg-neutral-800/90
            "
          >
            <div class="flex items-start justify-between gap-4 flex-wrap">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                  Ingeniería en Sistemas de Información con grado de Bachillerato
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                  Universidad Nacional de Costa Rica, Heredia
                </p>
              </div>

              <!-- Fecha -->
              <span
                class="
                  inline-flex items-center
                  rounded-full
                  px-3 py-1
                  text-xs font-medium
                  bg-blue-100 text-blue-700
                  dark:bg-blue-900/30 dark:text-blue-300
                  whitespace-nowrap
                "
              >
                Completado Nov. 2025
              </span>
            </div>
          </div>
        </div>

        <!-- Item 2 -->
        <div class="relative pl-12">
          <!-- Punto -->
          <span
            class="absolute left-1.5 top-3 w-5 h-5 rounded-full bg-purple-500 ring-4 ring-purple-500/20"
          ></span>

          <div
            class="
              group
              p-6
              bg-white/80 dark:bg-neutral-800/80
              backdrop-blur-sm
              rounded-xl
              border border-gray-200 dark:border-neutral-700
              shadow-lg
              transition-all duration-300
              hover:shadow-2xl
              hover:border-purple-400/50 dark:hover:border-purple-500/40
              hover:bg-white/90 dark:hover:bg-neutral-800/90
            "
          >
            <div class="flex items-start justify-between gap-4 flex-wrap">
              <div>
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                  Diplomado en programación de aplicaciones informáticas
                </h3>
                <p class="text-gray-600 dark:text-gray-400">
                  Universidad Nacional de Costa Rica, Heredia
                </p>
              </div>

              <!-- Fecha -->
              <span
                class="
                  inline-flex items-center
                  rounded-full
                  px-3 py-1
                  text-xs font-medium
                  bg-purple-100 text-purple-700
                  dark:bg-purple-900/30 dark:text-purple-300
                  whitespace-nowrap
                "
              >
                Completado Jun. 2024
              </span>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
